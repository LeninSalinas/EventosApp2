<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="@integer/material_motion_duration_short_2"
    android:paddingHorizontal="@dimen/cardview_compat_inset_shadow"
    android:paddingVertical="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEventoEnd"
        android:layout_width="408dp"
        android:layout_height="208dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_item_transform"
                android:layout_width="177dp"
                android:layout_height="174dp"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/image_view_item_transform_content_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/crconf"
                tools:src="@drawable/crconf" />

            <TextView
                android:id="@+id/ThemeEnd"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeTextType="uniform"
                android:minHeight="48dp"
                app:layout_constraintBottom_toTopOf="@+id/DateEveEnd"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/image_view_item_transform"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Theme Conference # xx" />

            <TextView
                android:id="@+id/DateEveEnd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:autoSizeTextType="uniform"
                android:minHeight="48dp"
                app:layout_constraintBottom_toTopOf="@+id/exposerEnd"
                app:layout_constraintEnd_toEndOf="@+id/ThemeEnd"
                app:layout_constraintStart_toStartOf="@+id/ThemeEnd"
                app:layout_constraintTop_toBottomOf="@+id/ThemeEnd"
                tools:text="Event Date" />

            <TextView
                android:id="@+id/exposerEnd"
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:autoSizeTextType="uniform"
                android:minHeight="48dp"
                app:layout_constraintBottom_toTopOf="@+id/statusEnd"
                app:layout_constraintEnd_toEndOf="@+id/DateEveEnd"
                app:layout_constraintStart_toStartOf="@+id/DateEveEnd"
                app:layout_constraintTop_toBottomOf="@+id/DateEveEnd"
                tools:text="Exposer" />

            <TextView
                android:id="@+id/statusEnd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="@+id/exposerEnd"
                app:layout_constraintStart_toStartOf="@+id/exposerEnd"
                app:layout_constraintTop_toBottomOf="@+id/exposerEnd"
                tools:text="Status evemt" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/modificar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />

            <Button
                android:id="@+id/btnDetalles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:text="Ver detalles"
                app:icon="@drawable/ic_list_event"
                app:layout_constraintEnd_toEndOf="@+id/statusEnd"
                app:layout_constraintStart_toStartOf="@+id/statusEnd"
                app:layout_constraintTop_toBottomOf="@+id/statusEnd" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>