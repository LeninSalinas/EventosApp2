<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="@integer/material_motion_duration_short_2"
    android:paddingHorizontal="@dimen/cardview_compat_inset_shadow"
    android:paddingVertical="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEndEve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="175dp"
                android:layout_height="146dp"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/crconf" />

            <TextView
                android:id="@+id/tvTema"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="8dp"
                android:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/tvDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.243"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Theme" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_marginBottom="8dp"
                android:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/exposerName"
                app:layout_constraintEnd_toEndOf="@+id/tvTema"
                app:layout_constraintStart_toStartOf="@+id/tvTema"
                tools:text="Event Date" />

            <TextView
                android:id="@+id/exposerName"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="@+id/tvDate"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="@+id/tvDate"
                app:layout_constraintTop_toBottomOf="@+id/tvDate"
                tools:text="Exposer" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/exposerName"
                app:layout_constraintHorizontal_bias="0.272"
                app:layout_constraintStart_toStartOf="@+id/exposerName"
                app:layout_constraintTop_toBottomOf="@+id/exposerName"
                app:layout_constraintVertical_bias="0.075"
                tools:text="Status" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/exposerName"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>